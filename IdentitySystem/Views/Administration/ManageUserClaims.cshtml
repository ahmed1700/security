@model IdentitySystem.ViewModels.UserClaimViewModel
@{
    ViewData["Title"] = "Manage User Claims";
}

<h1>Manage User Claims</h1>

<form  method="post">
    <div class="card">
        <div class="card-header">
             Manage User Claims
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Claims.Count; i++)
            {
            <div class="form-check m-1">
                <input type="hidden" asp-for="@Model.Claims[i].ClaimType" />
                <input asp-for="@Model.Claims[i].IsSelected" class="form-check-input" />
                <label class="form-check-label" asp-for="@Model.Claims[i].ClaimType">
                    @Model.Claims[i].ClaimType
                </label>
            </div>
            }
        <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit"  value="Submit" class="btn btn-primary" style="width:auto" />
            <a asp-action="EditUser" asp-route-id="@Model.UserId">Cancel</a>
        </div>
    </div>

</form>
