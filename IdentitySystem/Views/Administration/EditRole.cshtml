@model IdentitySystem.ViewModels.RoleViewModel
@{
    ViewData["Title"] = "Edit Role";
}

<h1>Edit Role</h1>
<form method="post">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit"  class="btn btn-primary" >Update</button>
            <a asp-action="ListRoles">Cancel</a>
        </div>
    </div>
    <!-- List of Users -->
    <div class="card">
        <div class="card-header">
            <h3>Users in this Role</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">No User at this Role</h5>
            }
        </div>
        <div class="card-footer">
            <a 
               asp-controller="Administration" asp-action="EditUserInRole"
               asp-route-roleId="@Model.Id"
               class="btn btn-primary">Add or Remove Users From this Role</a>
        </div>
    </div>
</form>

