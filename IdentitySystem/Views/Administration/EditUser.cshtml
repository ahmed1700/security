@model IdentitySystem.ViewModels.EditUserViewModel
@{
    ViewData["Title"] = "EditUser";
}

<h1>Edit User</h1>

<form method="post">
    <h4>Create a new account.</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Country"></label>
        <input asp-for="Country" class="form-control" />
        <span asp-validation-for="Country" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="m-3">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
            <div class="m-3">
                <a asp-action="ListUsers" class="btn btn-primary">Cancel</a>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            User Roles
        </div>
        <div class="card-body">
            @if (Model.Roles.Any())
            {
                foreach (var role in Model.Roles)
                {
                    <h5 class="card-title">@role</h5>
                }
            }
            else
            {
                <h5 class="card-title">User did't have assigned roles</h5>
            }
        </div>
        <div class="card-footer">
            <a href="#" class="btn btn-primary">Manage Roles</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            User Claims
        </div>
        <div class="card-body">
            @if (Model.Claims.Any())
            {
                foreach (var claim in Model.Claims)
                {
                    <h5 class="card-title">@claim</h5>
                }
            }
            else
            {
                <h5 class="card-title">User did't have assigned claims</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="ManageUserClaims" asp-route-userId="@Model.Id" 
               class="btn btn-primary">Manage Claims</a>
        </div>
    </div>
</form>

